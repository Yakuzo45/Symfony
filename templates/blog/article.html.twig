{# templates/blog/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}{{ article.name }}{% endblock %}

{% block stylesheets %}{% endblock %}

{% block body %}

    <div>
        <h1>Real Article s title : {{ article.name }}</h1>
        <h2>All tags From this Article</h2>
    </div>
    <ul>
        {% for tag in tags %}
            <li>{{ tag.name }} </li>
        {% else %}
            <li>No tags for this article</li>
        {% endfor %}
    </ul>

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button type="submit" name="btnSearch">Valider</button>
    {{ form_end(form) }}

    <a href="{{ path('blog_index') }}">
        Back to homepage.
    </a>

{% endblock %}